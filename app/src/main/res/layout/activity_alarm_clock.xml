<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@mipmap/ic_alarm_bg"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
         android:id="@+id/tv_delay"
        android:padding="@dimen/space_x2"
        android:textColor="@color/white"
        android:text="延迟"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_time"
        android:textColor="@color/white"
        android:textSize="50sp"
        android:text="14:00"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/space_x4"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_close"
        android:layout_marginBottom="@dimen/space_x4"
        android:layout_width="@dimen/space_x8"
        android:layout_height="@dimen/space_x8"
        android:background="@drawable/circle_dark_pink"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="关闭"
        android:textColor="@color/white"
        android:textSize="28sp" />
</RelativeLayout>
