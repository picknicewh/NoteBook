<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:padding="@dimen/space"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="字体"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/space_x2"/>
        <TextView
            android:text="粉粉"
            android:background="@drawable/bg_grey_border"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="@dimen/space_x4"
            android:layout_height="@dimen/space_x4"
            android:textColor="@color/main_text_color"
          />
    </LinearLayout>
    <LinearLayout
        android:padding="@dimen/space"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="字号"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/space_x2"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_font_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <LinearLayout
        android:padding="@dimen/space"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="颜色"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/space_x2"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_font_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>