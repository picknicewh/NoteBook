<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:padding="@dimen/space_x2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_week"
            android:text="今天 08-28"
            android:textSize="@dimen/ts_large"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_weather_image"
            android:src="@mipmap/ic_sunny"
            android:layout_width="@dimen/space_x4"
            android:layout_height="@dimen/space_x4" />
        <TextView
            android:id="@+id/tv_temprature"
            android:text="36 - 27"
            android:textSize="@dimen/ts_large"
            android:layout_gravity="center"
            android:gravity="right"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>