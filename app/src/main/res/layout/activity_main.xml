<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.wh.kotlinnotebook.MainActivity">
   <android.support.v4.view.ViewPager
       android:id="@+id/vp_main"
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="1" />

    <RadioGroup
        android:id="@+id/rg_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/space">
        <RadioButton
            android:id="@+id/rb_home"
            style="@style/home_nav_btn"
            android:checked="true"
            android:drawableTop="@drawable/home"
            android:text="@string/home" />

        <RadioButton
            android:id="@+id/rb_secret"
            style="@style/home_nav_btn"
            android:drawableTop="@drawable/secret"
            android:text="@string/secret" />

        <RadioButton
            android:id="@+id/rb_information"
            style="@style/home_nav_btn"
            android:drawableTop="@drawable/information"
            android:text="@string/information" />

        <RadioButton
            android:id="@+id/rb_about"
            style="@style/home_nav_btn"
            android:drawableTop="@drawable/about"
            android:text="@string/about" />
    </RadioGroup>
</LinearLayout>
